@model BookStoreMVC.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container-fluid mt-4">
    <div class="row g-3">
        <div class="col-12 d-flex justify-content-between align-items-center mb-2">
            <h3 class="m-0">Dashboard</h3>
            <div>
                <button class="btn btn-outline-secondary me-2">Export</button>
                <a class="btn btn-primary" asp-controller="Books" asp-action="Create">Add Book</a>
            </div>
        </div>

        <!-- KPI Cards -->
        <div class="col-md-3">
            <div class="card kpi-card">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="kpi-label">Total Books</div>
                        <div class="kpi-value">@Model.TotalBooks</div>
                    </div>
                    <div class="kpi-icon kpi-primary ms-3 fs-3 text-white">
                        <i class="bi bi-book"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card kpi-card">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="kpi-label">Total Authors</div>
                        <div class="kpi-value">@Model.TotalAuthors</div>
                    </div>
                    <div class="kpi-icon kpi-success ms-3 fs-3 text-white">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card kpi-card">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="kpi-label">Total Categories</div>
                        <div class="kpi-value">@Model.TotalCategories</div>
                    </div>
                    <div class="kpi-icon kpi-warning ms-3 fs-3 text-white">
                        <i class="bi bi-tags"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card kpi-card">
                <div class="card-body d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="kpi-label">Total Users</div>
                        <div class="kpi-value">@Model.TotalUsers</div>
                    </div>
                    <div class="kpi-icon kpi-info ms-3 fs-3 text-white">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-header">Overview</div>
                <div class="card-body">
                    <canvas id="overviewChart" height="120"></canvas>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">Recent Books</div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RecentBooks != null && Model.RecentBooks.Any())
                            {
                                foreach (var b in Model.RecentBooks)
                                {
                                    <tr>
                                        <td>@b.Title</td>
                                        <td class="text-muted-small">@b.AuthorName</td>
                                        <td class="text-muted-small">@b.CategoryName</td>
                                        <td>@b.Price.ToString("C")</td>
                                        <td>
                                            <a class="btn btn-sm btn-outline-primary" asp-controller="Books" asp-action="Edit" asp-route-id="@b.BookId">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="5" class="text-center p-3 text-muted-small">No recent books</td></tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-3 module-tile">
                <div class="card-header">Modules</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6 mb-2">
                            <a href="@Url.Action("Index", "Books")" class="d-block text-decoration-none text-center p-3">
                                <i class="bi bi-book fs-4 mb-1"></i>
                                <div class="title">Books</div>
                                <div class="text-muted-small">Manage book records</div>
                            </a>
                        </div>
                        <div class="col-6 mb-2">
                            <a href="@Url.Action("Index", "Authors")" class="d-block text-decoration-none text-center p-3">
                                <i class="bi bi-person fs-4 mb-1"></i>
                                <div class="title">Authors</div>
                                <div class="text-muted-small">Manage authors</div>
                            </a>
                        </div>
                        <div class="col-6 mb-2">
                            <a href="@Url.Action("Index", "Categories")" class="d-block text-decoration-none text-center p-3">
                                <i class="bi bi-tags fs-4 mb-1"></i>
                                <div class="title">Categories</div>
                                <div class="text-muted-small">Manage categories</div>
                            </a>
                        </div>
                        <div class="col-6 mb-2">
                            <a href="@Url.Action("Index", "Role")" class="d-block text-decoration-none text-center p-3">
                                <i class="bi bi-shield-lock fs-4 mb-1"></i>
                                <div class="title">Roles</div>
                                <div class="text-muted-small">Manage roles & permissions</div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('overviewChart').getContext('2d');
        var overviewChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ChartLabels)),
                datasets: [{
                    label: 'Books Created',
                    data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BooksData)),
                    borderColor: '#2563eb',
                    backgroundColor: 'rgba(37,99,235,0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: true } },
                scales: {
                    y: { beginAtZero: true, precision: 0 }
                }
            }
        });
    </script>
}
