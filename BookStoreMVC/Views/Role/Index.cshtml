@model IEnumerable<BookStore.Models.Identity.ApplicationRole>

<h2>Roles</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Add Role</a>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="AssignModules" asp-route-roleId="@role.Id" class="btn btn-sm btn-success">Assign Modules</a>
                </td>
            </tr>
        }
    </tbody>
</table>
